<body>
  <div class="container">
    <h1 id="setSchedule">
      Set Student's Class Schedule
    </h1>
    <form class="row g-3">
      <div class="col-md-6">
        <label for="studentToAdd" class="form-label">
          Please enter student_id of the student you want to add a class to.
        </label>
        <input type="number" class="form-control" id="student_to_add" />
      </div>
      <div class="col-md-6">
        <label for="classToAdd" class="form-label">
          Please enter the class_id you want to add the student to.
        </label>
        <input type="number" class="form-control" id="class_to_add" />
      </div>
      <div class="col-md-12">
        <button type="submit" class="btn btn-primary" id="addStudentToClass">
          Add Class to Student's Schedule
        </button>
      </div>
    </form>
  </div>
  <div class="container mt-5">
    <div class="row">
       <div class="col-md-6" id="student-class-table"></div>
       <div class="col-md-6" id="available-class-table"></div>
    </div>
    <div class="row">
       <div class="col-md-12" id="student-class-combined-table"></div>
    </div>
  </div>
  <!-- Student script -->
