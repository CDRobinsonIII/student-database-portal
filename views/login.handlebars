<div class="front-page-body mt-0">
  <div class="container-fluid front-page-top-container text-center">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="front-image"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 offset-md-2 chalkboard">
        <div id="signup-quote" class="mt-3 fw-normal"></div>
        <div id="signup-author" class="mb-3 fst-italic fw-normal"></div>
      </div>
    </div>

  </div>
  <div class="container-fluid front-page-middle-container text-center mt-5 py-4">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h2>Login!</h2>
        <form class="login">
          <div class="form-group text-start">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="email-input" placeholder="Email">
          </div>
          <div class="form-group text-start">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-input" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-info" id="loginButton">Login</button>
        </form>
        <br />
        <p>Or sign up <a href="/">here</a></p>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="js/login.js"></script>
</div>