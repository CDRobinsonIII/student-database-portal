<body class="pagesBackground">
    {{!-- Studio dropdown option --}}
    <div class="container" id="classRegistration">
        <div class="row text-center mt-3 mb-3">
            <h1>Add Class</h1>
        </div>
        <form class="row g-3">
            <div class="col-md-2">
                <label for="studio" class="form-label">
                    Studio
                </label>
                <select id="studio" class="form-select">
                    <option selected>
                        Choose...
                    </option>
                    <option value="La Mesa">
                        La Mesa
                    </option>
                    <option value="Santee">
                        Santee
                    </option>
                    <option value="Bonita">
                        Bonita
                    </option>
                </select>
            </div>
            {{!-- Day of the week dropdown option --}}
            <div class="col-md-3">
                <label for="day" class="form-label">
                    Day of the week
                </label>
                <select id="day" class="form-select">
                    <option selected>
                        Choose...
                    </option>
                    <option value="Monday">
                        Monday
                    </option>
                    <option value="Tuesday">
                        Tuesday
                    </option>
                    <option value="Wednesday">
                        Wednesday
                    </option>
                    <option value="Thursday">
                        Thursday
                    </option>
                    <option value="Friday">
                        Friday
                    </option>
                    <option value="Saturday">
                        Saturday
                    </option>
                </select>
            </div>
            {{!-- Start time dropdown option --}}
            <div class="col-md-2">
                <label for="start_time" class="form-label">
                    Start time
                </label>
                <select id="start_time" class="form-select">
                    <option selected>
                        Choose...
                    </option>
                    <option value="9">
                        9:00AM
                    </option>
                    <option value="1030">
                        10:30AM
                    </option>
                    <option value="12">
                        12:00PM
                    </option>
                    <option value="2">
                        2:00PM
                    </option>
                    <option value="330">
                        3:30PM
                    </option>
                    <option value="5">
                        5:00PM
                    </option>
                    <option value="630">
                        6:30PM
                    </option>

                </select>
            </div>
            {{!-- End time dropdown option --}}
            <div class="col-md-2">
                <label for="end_time" class="form-label">
                    End time
                </label>
                <select id="end_time" class="form-select">
                    <option selected>
                        Choose...
                    </option>
                    <option value="1030">
                        10:30AM
                    </option>
                    <option value="12">
                        12:00PM
                    </option>
                    <option value="130">
                        1:30PM
                    </option>
                    <option value="330">
                        3:30PM
                    </option>
                    <option value="5">
                        5:00PM
                    </option>
                    <option value="630">
                        6:30PM
                    </option>
                    <option value="630">
                        8:00PM
                    </option>
                </select>
            </div>
            {{!-- Teacher dropdown option --}}
            <div class="col-md-2">
                <label for="teacher" class="form-label">
                    Teacher
                </label>
                <select id="teacher" class="form-select">
                    <option selected>
                        Choose...
                    </option>
                    <option value="Skye">
                        Ms. Skye Jollie
                    </option>
                    <option value="Kyle">
                        Mr. Kyle McIntosh
                    </option>
                    <option value="Aubrey">
                        Ms. Aubrey Sawicki
                    </option>
                </select>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary" id="registerClass">
                    Add a class
                </button>
            </div>

        </form>
    </div>

  <div class="container mt-5">
    <div class="classes-table-header">
      <h2>Class Information</h2>
      <p class="fst-italic">*If updating, please click on the save button at the bottom of the list.</p>
    </div>
    <div id="classes-table"></div>
    <button type="button" class="btn btn-primary mt-2" id="save">
      Save
    </button>
  </div>
